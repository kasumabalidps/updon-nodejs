<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Upload Portal</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <style>
    body {
      background-color: #f7f7f7;
      font-family: 'Poppins', sans-serif;
    }
    .navbar-custom {
      background: linear-gradient(45deg, #007bff, #00dbde);
      color: white;
    }
    .navbar-custom .navbar-brand, .navbar-custom .nav-link {
      color: white;
    }
    .navbar-custom .nav-link:hover, .navbar-custom .nav-item.active .nav-link {
      color: #ffc107;
    }
    .btn-text-auth {
      color: white;
      background-color: transparent;
      border: none;
      transition: color 0.3s;
    }
    .btn-text-auth:hover {
      color: #ffc107;
      text-decoration: underline;
    }
    .container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      margin-top: 20px;
    }
    .drag-area {
      background-color: #ffffff;
      border: 2px dashed #007bff;
      border-radius: 10px;
      width: 100%;
      height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      text-align: center;
      margin-bottom: 15px;
      transition: background-color 0.3s;
    }
    .drag-area.active {
      background-color: #e9f5ff;
    }
    .drag-area:hover {
      cursor: pointer;
    }
    .icon {
      font-size: 48px;
      color: #007bff;
      margin-bottom: 10px;
    }
    .btn-custom {
      color: white;
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-custom:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
    .progress {
      height: 25px;
      display: none;
      margin-bottom: 20px;
    }
    .progress-bar {
      width: 0%;
      transition: width 0.4s ease;
    }
    #file-chosen {
      margin-top: 10px;
    }
    /* Animasi untuk drag & drop */
    @keyframes wiggle {
      0%, 100% { transform: rotate(-3deg); }
      50% { transform: rotate(3deg); }
    }
    .drag-area.active {
      animation: wiggle 0.2s ease infinite;
    }
  </style>
</head>
<body>
  <!-- Navbar Start -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <a class="navbar-brand" href="#">
      <img src="/path-to-your-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
      File Upload Portal
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Upload</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">List Upload</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      </ul>
      <div class="navbar-nav">
        <a class="nav-item nav-link btn-text-auth" href="/login">Login</a>
        <a class="nav-item nav-link btn-text-auth" href="/register">Register</a>
      </div>
    </div>
  </nav>
  <!-- Navbar End -->

  <div class="container">
    <h2 class="text-center mb-4">File Upload Portal</h2>
    <form id="file-upload-form" class="mb-3" enctype="multipart/form-data">
      <div class="drag-area" id="drag-area">
        <div class="icon"><i class="fas fa-cloud-upload-alt"></i></div>
        <header>Drag & Drop to Upload File</header>
        <span>OR</span>
        <button type="button" class="btn btn-custom" onclick="document.getElementById('fileInput').click();">Browse File</button>
        <input type="file" id="fileInput" name="file" hidden>
        <span id="file-chosen">No file chosen</span>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
      </div>
      <button type="button" class="btn btn-primary btn-block" id="upload-btn">Upload File</button>
    </form>
    <h4>Uploaded Files:</h4>
    <ul class="list-group" id="file-list">
      <% if(files && files.length > 0) { %>
        <% files.slice(0, 3).forEach(function(file) { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= file %>
            <a href="/uploads/<%= file %>" class="btn btn-secondary btn-sm" download>Download</a>
          </li>
        <% }); %>
      <% } else { %>
        <li class="list-group-item">No files uploaded yet.</li>
      <% } %>
    </ul>
    <% if(files && files.length > 3) { %>
      <div class="text-center mt-3">
        <a href="/files" class="btn btn-primary">Show More</a>
      </div>
    <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('upload-btn').addEventListener('click', function(e) {
      const fileInput = document.getElementById('fileInput');
      if (fileInput.files.length === 0) {
        alert('Please select a file to upload');
        return;
      }
      const formData = new FormData();
      formData.append('file', fileInput.files[0]);

      const fileChosen = document.getElementById('file-chosen');
    
      fileInput.addEventListener('change', function() {
        fileChosen.textContent = this.files[0].name;
      });

      const xhr = new XMLHttpRequest();
      xhr.open('POST', '/upload', true);

      xhr.upload.onprogress = function(e) {
        if (e.lengthComputable) {
          const percentComplete = (e.loaded / e.total) * 100;
          const progress = document.querySelector('.progress-bar');
          progress.style.width = percentComplete + '%';
          progress.textContent = Math.floor(percentComplete) + '%';
          document.querySelector('.progress').style.display = 'block';
        }
      };

      xhr.onload = function() {
        if (xhr.status === 200) {
          document.querySelector('.progress').style.display = 'none';
          document.querySelector('.progress-bar').style.width = '0%';
          document.querySelector('.progress-bar').textContent = '0%';

          const newFile = document.createElement('li');
          newFile.classList.add('list-group-item', 'd-flex', 'justify-content-between', 'align-items-center');
          newFile.innerHTML = `${fileInput.files[0].name} <a href="/uploads/${fileInput.files[0].name}" class="btn btn-secondary btn-sm" download>Download</a>`;
          document.getElementById('file-list').appendChild(newFile);

          // Periksa jumlah file dan tampilkan atau sembunyikan tombol "Show More"
          updateShowMore();

          fileInput.value = '';
        } else {
          alert('Upload failed.');
        }
      };

      xhr.send(formData);
    });

    function updateShowMore() {
      const fileList = document.getElementById('file-list');
      const files = fileList.getElementsByTagName('li');
      const showMoreContainer = document.getElementById('show-more-container');

      if (files.length > 3) {
        showMoreContainer.innerHTML = '<a href="/files" class="btn btn-primary">Show More</a>';
        showMoreContainer.style.display = 'block';
      } else {
        showMoreContainer.style.display = 'none';
      }
    }

    // Panggil updateShowMore saat halaman dimuat untuk menangani refresh halaman
    document.addEventListener('DOMContentLoaded', updateShowMore);
  </script>
</body>
</html>